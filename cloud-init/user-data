#cloud-config

hostname: devvm
manage_etc_hosts: true

users:
  - name: james
    groups: wheel
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    ssh_authorized_keys:
      - YOUR_PUBLIC_SSH_KEY_HERE

package_update: true
package_upgrade: true
packages:
  - git

runcmd:
  - git clone https://github.com/YOURUSERNAME/YOURREPO.git /home/james/bootstrap
  - cd /home/james/bootstrap/scripts
  - chmod +x bootstrap-all.sh install-brave.sh
  - ./bootstrap-all.sh
  - ./install-brave.sh
